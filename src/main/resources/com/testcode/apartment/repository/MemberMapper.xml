<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.testcode.apartment.repository.MemberMapper">
    <insert id="save"
            parameterType="com.testcode.apartment.domain.Member"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into testcode.member (name, email)
        values (#{name}, #{email})
    </insert>

    <select id="findById"
            parameterType="int"
            resultType="com.testcode.apartment.domain.Member">
        select *
        from testcode.member
        where id = #{id}
    </select>

    <select id="findByEmail"
            parameterType="String"
            resultType="com.testcode.apartment.domain.Member">
        select *
        from testcode.member
        where email = #{email}
    </select>
</mapper>